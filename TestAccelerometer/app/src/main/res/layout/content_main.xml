<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/view_bg"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_gravity="center_horizontal"
        android:onClick="saveData"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnGps"
        android:layout_toStartOf="@+id/btnGps" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="GPS"
        android:id="@+id/btnGps"
        android:layout_gravity="right"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:onClick="gps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:id="@+id/map"
        android:layout_gravity="center_horizontal"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:onClick="displayMap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btnGps"
        android:layout_toEndOf="@+id/btnGps" />

    <TextView
        android:layout_width="273dp"
        android:layout_height="200dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/showOutput"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hole"
        android:id="@+id/hole"
        android:layout_gravity="center_horizontal"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:onClick="hole"
        android:layout_above="@+id/btnGps"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
